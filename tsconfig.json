{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "target": "es5",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "../node_modules"
  ],
}
